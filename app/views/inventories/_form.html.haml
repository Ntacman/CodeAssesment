= form_for @inventory do |f|
  - if @inventory.errors.any?
    #error_explanation
      %h2= "#{pluralize(@inventory.errors.count, "error")} prohibited this inventory from being saved:"
      %ul
        - @inventory.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :product_id
    = f.text_field :product_id
  .field
    = f.label :quantity
    = f.text_field :quantity
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :weight
    = f.text_field :weight
  .field
    = f.label :price_cents
    = f.text_field :price_cents
  .field
    = f.label :sale_price_cents
    = f.text_field :sale_price_cents
  .field
    = f.label :cost_cents
    = f.text_field :cost_cents
  .field
    = f.label :sku
    = f.text_field :sku
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :width
    = f.text_field :width
  .field
    = f.label :height
    = f.text_field :height
  .field
    = f.label :note
    = f.text_field :note
  .actions
    = f.submit 'Save'
